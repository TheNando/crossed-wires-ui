{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "jsx": "react",
    "jsxFactory": "m",
    "lib": ["dom", "es2018"],
    "module": "es6",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./ts-compile/",
    "paths": {
      "mithril": ["../node_modules/mithril"]
    },
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": false,
    "target": "es5"
  },
  "include": ["src/**/*.ts*"],
  "exclude": [".git", "node_modules"]
}
